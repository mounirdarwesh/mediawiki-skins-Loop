{
	"name": "LoopSkin",
	"namemsg": "loop-skinname",
	"type": "skin",
	"ValidSkinNames": {
		"loop": "Loop"
	},		
	"author": [
		"Marc Vorreiter",
		"Dennis Krohn"
	],
	"version": "2.0",
	"url": "https://github.com/oncampus/mediawiki-skins-Loop",
	"description":	"LoopSkin",
	"descriptionmsg": "loopskin-desc",
	"licence-name": "GPL-3.0-or-later",
	"requires": {
		"MediaWiki": ">= 1.32.0",
		"extensions": {
			"Loop": ">= 2.0"
		}
	},	
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "Loop"
	},
	"config": {
		"LoopRenderMode": {
			"value" : "default",
			"description" : "Defines type of render mode. [ default | offline ]"
		},
		"LoopSkinStyles": {
			"value": [ "loop-common", "loop-oncampus" ],
			"description": "Sets skin style"
		}
	},
    "DefaultUserOptions": {
		"LoopSkinStyle": "loop-common"
	},
	"Hooks": {
		"SkinEditSectionLinks": [
			"LoopSkinHooks::onSkinEditSectionLinks"
		],
		"HtmlPageLinkRendererEnd":[
			"LoopSkinHooks::onHtmlPageLinkRendererEnd"
		]
	},
	"ResourceModules": {
		"skins.loop-bootstrap": {
			"position": "top",
			"styles": "vendor/twbs/bootstrap/dist/css/bootstrap.css"
		},	
		"skins.loop-icons": {
			"position": "top",
			"styles": "resources/loopicons/style.css"
		},
		"skins.loop-plyr": {
			"position": "top",
			"styles": "node_modules/plyr/dist/plyr.css"
		},
		"skins.loop.js": {
			"position": "bottom",
			"scripts": [
					"resources/js/loop.js"
				],
			"dependencies": [
					"mediawiki.jqueryMsg"
			],
			"messages": [
					"loop-audio-unavailable"
			]
		},	
		"skins.loop-bootstrap.js": {
			"position": "bottom",
			"scripts": [
					"vendor/twbs/bootstrap/dist/js/bootstrap.bundle.js"
				]
		},
		"skins.loop-plyr.js": {
			"scripts": [
					"node_modules/plyr/dist/plyr.min.js"
				]
		},
		"skins.loop-common": {
			"class": "ResourceLoaderSkinModule",
			"position": "top",
			"styles": {
				"resources/styles/less/skins/loop-common/loop-common.less": {
					"media": "all"
				}
			}
		},
		"skins.loop-oncampus": {
			"class": "ResourceLoaderSkinModule",
			"position": "top",
			"styles": {
				"resources/styles/less/skins/loop-oncampus/loop-oncampus.less": {
					"media": "all"
				}
			}
		}
	},	
	"MessagesDirs": {
		"Loop": [
			"i18n"
		]
	},
	"AutoloadClasses": {
		"SkinLoop": "Loop.skin.php",
		"LoopTemplate": "LoopTemplate.php",
		"LoopSkinHooks": "Loop.skin.hooks.php"
	},
	"manifest_version": 2
}